<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">#ffffff</item>
    </style>

    <!-- Light base activity theme -->
    <style name="ActivityTheme.Primary.Base.Light" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">#FFFFFF</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/primaryBackgroundAlpha</item>
        <item name="primaryBackground">@color/backgroundDark</item>
        <item name="primaryBackgroundDark">@color/primaryBackgroundDark</item>
        <item name="primaryBackgroundAlpha">@color/primaryBackgroundDark</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <!-- Dark base activity theme -->
    <style name="ActivityTheme.Primary.Base.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/primaryBackgroundAlpha</item>
        <item name="primaryBackground">@color/backgroundDark</item>
        <item name="primaryBackgroundDark">@color/primaryBackgroundDark</item>
        <item name="primaryBackgroundAlpha">@color/primaryBackgroundDark</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="ActivityThemeDark" parent="ActivityTheme.Primary.Base.Dark">
        <item name="android:windowBackground">@color/primaryDark</item>
    </style>

    <style name="ActivityThemeLight" parent="ActivityTheme.Primary.Base.Light">
        <item name="android:windowBackground">#FFFFFF</item>
    </style>
</resources>
